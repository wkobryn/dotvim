call pathogen#infect()

set background=dark
colorscheme Tomorrow
" let g:molokai_original = 1

set tabstop=4
set expandtab
set smarttab
set shiftwidth=4
set softtabstop=4
set modeline
set number
" set cursorline
set encoding=utf-8
set tw=0
set autoindent
set si
set sm
set noruler
